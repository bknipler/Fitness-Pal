<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StepCounter.Views.FitnessTips">

  <StackLayout>
    <Image Source="{Binding Banner}" Aspect="AspectFit" />
    <Label Text="{Binding Tip}" LineBreakMode="WordWrap" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
    <Button Text="New Tip!"
    Command="{Binding TipsCommand}" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
    <Button Text="Home"
    Command="{Binding Home}" HorizontalOptions="Center" VerticalOptions="CenterAndExpand"/>
  </StackLayout>
</ContentPage>